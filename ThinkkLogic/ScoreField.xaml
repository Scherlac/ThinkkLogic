<UserControl x:Class="ThinkkLogic.ScoreField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThinkkLogic"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid>
        <Ellipse x:Name="Hole" Height="7" Width="7" Fill="Black"/>
        <Ellipse x:Name="Button"  Height="15" Width="15" Visibility="Visible">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop x:Name="ButtonGradientStop" Color="#FFB8B1B1" Offset="1"/>
                    <GradientStop Color="White"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</UserControl>
